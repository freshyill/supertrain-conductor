<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>

  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  {% set css %}
    {% include "assets/css/style.css" %}
  {% endset %}

  {% if siteTools.env == 'development' %}
  {# We use a link tag for local development so BrowserSync can reload styles
     without a full page refresh. #}
    <link rel="stylesheet" href="/_includes/assets/css/style.css">
  {% else %}
  {# Otherwise, we'll just inline them for better performance #}
    <style>
      {{ css | cssmin | safe }}
    </style>
  {% endif %}

  {# This is just here as a placeholder. Inlining local styles will probably be
     the right approach for any site that uses this, but we may still want to
     pull in external styles, such as Google Fonts.

  <link rel="stylesheet" href="#"> #}

  {% set js %}
    {% include "assets/js/inline.js" %}
  {% endset %}

  <script>{{ js | jsmin | safe }}</script>

  <meta name="description" content="{{ metadata.description }}">
  <meta name="theme-color" content="#000000">

  <link rel="manifest" href="/manifest.json">

  <link rel="apple-touch-icon" sizes="180x180" href="/icons//apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#000000">
  <meta name="theme-color" content="#000000">

</head>
